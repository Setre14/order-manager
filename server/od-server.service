###
#LimitMEMLOCK=infinity
#LimitNOFILE=65535
Type=simple
WorkingDirectory=/home/ubuntu/workspace/order-manager/client
ExecStart=yarn run buildlDeploy && yarn run prod
Restart=always

[Install]
WantedBy=multi-user.target